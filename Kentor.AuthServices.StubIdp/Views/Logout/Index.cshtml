@model LogoutModel

@using (Html.BeginForm("Index", "Logout", FormMethod.Post))
{
    @Html.ValidationSummary()

    if (!string.IsNullOrEmpty(Model.LogoutRequestXml))
    {
        <div>
            @Html.LabelFor(m => m.LogoutRequestXml)
            <pre class="xml">@Model.LogoutRequestXml</pre>
        </div>
        <div>
            @Html.LabelFor(m => m.InResponseTo)
            @Html.EditorFor(m => m.InResponseTo)
            @Html.ValidationMessageFor(m => m.InResponseTo);
        </div>
    }
    else
    {
        <div>
            @Html.LabelFor(m => m.NameId)
            @Html.EditorFor(m => m.NameId)
            @Html.ValidationMessageFor(m => m.NameId);
        </div>
        <div>
            @Html.LabelFor(m => m.SessionIndex)
            @Html.EditorFor(m => m.SessionIndex)
            @Html.ValidationMessageFor(m => m.SessionIndex)
        </div>
    }
    <div>
        @Html.LabelFor(m => m.DestinationUrl)
        @Html.EditorFor(m => m.DestinationUrl)
        @Html.ValidationMessageFor(m => m.DestinationUrl)
    </div>

    <button id="submit">Log out</button>
}